datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Status {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Message {
  chat      Chat?     @relation(fields: [chatId], references: [id])
  chatId    String?
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  sentAt    DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Chat {
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  isGroupChat Boolean?
  messages    Message[]
  title       String?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt      DateTime  @default(now())
  email          String?   @unique
  firstName      String?
  id             String    @id @default(cuid())
  lastName       String?
  messages       Message[]
  password       String
  profilePicture Json?
  roles          Json
  statuses       Status[]
  updatedAt      DateTime  @updatedAt
  username       String    @unique
}
